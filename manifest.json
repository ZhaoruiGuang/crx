{
	// 清单文件的版本，这个必须写，而且必须是2
	"manifest_version": 2,
	// 插件的名称
	"name": "crx_demo",
	// 插件的版本
	"version": "1.0.1",
	// 插件描述
	"description": "简单的Chrome扩展demo",
	// 图标，一般偷懒全部用一个尺寸的也没问题
	"icons": {
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	// 浏览器右上角图标设置，browser_action、page_action、app必须三选一
	"browser_action": {
		"default_icon": "img/icon.png",
		// 图标悬停时的标题，可选
		"default_title": "这是一个示例Chrome插件",
		"default_popup": "popup.html"
	},
	// 某些特定页面下才会显示的图标,,,具体页面配置在 background.js 里
	// "page_action":{
	// 	"default_icon": "img/icon.png",
	// 	"default_title": "我是pageAction",
	// 	"default_popup": "popup.html"
	// },
	// 权限申请
	"permissions": [
		"cookies",
		"declarativeContent",
		"contextMenus", 		// 右键菜单
		"tabs", 				// 标签
		"notifications", 		// 通知
		"webRequest", 			// web请求
		"webRequestBlocking",
		"storage", 				// 插件本地存储
		"http://*/*", 			// 可以通过executeScript或者insertCSS访问的网站
		"https://*/*" 			// 可以通过executeScript或者insertCSS访问的网站
	],
	// 会一直常驻的后台JS或后台页面
	"background": {
		// 2种指定方式，如果指定JS，那么会自动生成一个背景页
		// "page": "background.html"
		"scripts": ["js/background.js"]
	},
	// 普通页面能够直接访问的插件资源列表，如果不设置是无法直接访问的
	"web_accessible_resources": [
		"js/inject.js",
		"img/wallpaper.png"
	],
	// 需要直接注入页面的JS
	"content_scripts": [
		{
			//"matches": ["http://*/*", "https://*/*"],
			// "<all_urls>" 表示匹配所有地址
			"matches": ["<all_urls>"],
			// 多个JS按顺序注入
			"js": ["js/inject.js","js/insert.js"],
			"css":["css/inject.css"],
			// 代码注入的时间，可选值： "document_start", "document_end", or "document_idle"，最后一个表示页面空闲时，默认document_idle
			// 如果在 document_start 注入,一些 dom 操作会操作,因为这时页面还没有生成 dom 结构
			"run_at": "document_end"
		}
	],
	// 插件主页，这个很重要，不要浪费了这个免费广告位
	"homepage_url": "https://github.com/ZhaoruiGuang",
	
	// 用自定义页面替换浏览器默认页面（只能替换一个）
	// "chrome_url_overrides":{
	// 	"newtab": "html/newpages.html"
	// 	// "history": "history.html",
	// 	// "bookmarks": "bookmarks.html"
	// }
	
	// 只能指向一个HTML文件，不能是JS文件（但是这个 devtools.html 里面一般什么都没有，就引入一个js）
	"devtools_page": "../html/devtools.html",
	// 插件自己的设置页
	"options_ui":{
		"page": "../html/set.html",
		// 使用一些 chrome 默认的样式,例如字体什么的,,推荐使用
		"chrome_style": true
	}
}
